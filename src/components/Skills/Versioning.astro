---
import GitLight from "../icons/skills/GitLight.astro";
import GitHub from "../icons/skills/Github.astro";
import SkillCard from "../SkillCard.astro";
import TitleSkills from "./TitleSkills.astro";
import { getXPYears } from "@/utils/getXPYears";

const { iconSize } = Astro.props;
---

<section {...Astro.props}>
  <TitleSkills> Control de versiones </TitleSkills>
  <div class="flex gap-6 items-center flex-wrap">
    <SkillCard text={`+${getXPYears(2022)} Años`} name="Git">
      <GitLight class={`${iconSize}`} />
    </SkillCard>
    <SkillCard text={`+${getXPYears(2022)} Años`} name="GitHub">
      <GitHub iconSize={iconSize} />
    </SkillCard>
  </div>
</section>
